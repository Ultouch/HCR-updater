{
  "productName": "hcr",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!.github",
    "!.vscode",
    "!.code-workspace",
    "!.npmrc",
    "!*.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!_config.yml",
    "!angular.json",
    "!tsconfig*.json",
    "!tslint.json",
    "!.eslintrc.json",
    "!karma.conf.js",
    "!angular.webpack.js",
    "!*.map"
  ],
  "win": {
    "icon": "dist/hcr-updater/assets/icon",
    "target": ["portable"]
  },
  "portable": {
    "splashImage": "dist/hcr-updater/assets/icon/electron.bmp"
  },
  "mac": {
    "icon": "dist/hcr-updater/assets/icon",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist/hcr-updater/assets/icon",
    "target": ["AppImage"]
  }
}